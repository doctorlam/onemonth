<h1>All Proposals</h1>
<hr>
<% if user_signed_in? %>
  <%= link_to 'New Proposal', new_proposal_path, class:"btn btn-default" %>
<% end %>
<br />
<% form_tag proposals_path do %>

<% end %>
<br />
<div class ="table-responsive">
<table class ="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Organization</th>
      <th>Title</th>
      <th>Semester</th>
      <th>Project Length</th>
      <th>Email</th>
      <th>Status</th>
      <th>Course</th>
    </tr>
  </thead>

  <tbody>
    <% @proposals.each do |proposal| %>
      <tr>
        <td><%= link_to [proposal.first_name, proposal.last_name].join(" "), proposal %></td>
        <td><%= proposal.organization %></td>
        <td><%= proposal.title %></td>
        <td><%= proposal.semester_id %></td>
        <td><%= proposal.time %></td>
        <td><%= proposal.user.email if proposal.user %></td>
        <td><%= proposal.status if proposal.status %></td>
        <td><%= proposal.course %></td>
        <td><%= link_to 'Show', proposal %></td>
        <% if can? :update, proposal %>
          <td><%= link_to 'Edit', edit_proposal_path(proposal) %></td>
        <% end %>
        <% if can? :destroy, proposal %>
          <td><%= link_to 'Destroy', proposal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
            
      
      </tr>
    <% end %>
  </tbody>
</table>
</div> 
<br>



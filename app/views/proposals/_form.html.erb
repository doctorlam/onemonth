<%= form_for @proposal, html: { multipart: true } do |f| %>  
<% if @proposal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@proposal.errors.count, "error") %> prohibited this proposal from being saved:</h2>

      <ul>
      <% @proposal.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <% if current_user.admin? or current_user.role?('instructor') %>
  <div class="form-group">
    <%= f.label :course, "What course is this project for?" %><br>
    <%= f.select(:course, options_for_select([['TECM 3000','TECM 3000'],['TECM 3100','TECM 3100'],['TECM 3200','TECM 3200'],['TECM 4100','TECM 4100'],['TECM 4180','TECM 4180'],['TECM 4190','TECM 4190'],['TECM 4200','TECM 4200'],['TECM 4250','TECM 4250'],['TECM 4700','TECM 4700']],:selected => :course))%>

  </div>
    <% end %> 
  
  <div class ="form-group">
   <%= f.label :first_name %><br>
    <%= f.text_field :first_name, class: "form-control" %>

</div>
<div class ="form-group">
   <%= f.label :last_name %>`<br>
    <%= f.text_field :last_name, class: "form-control" %>
</div>

<div class ="form-group">
   <%= f.label :organization, "Organization Name" %><br>
    <%= f.text_field :organization, class: "form-control" %>
  </div>

<div class="form-group">
    <%= f.label :title, "Project Title" %><br>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :semester_id, "Semester" %><br>
    <%= f.select(:semester_id, options_for_select([['Fall, 2015','Fall, 2015'], ['Spring, 2016',
      'Spring, 2016'],['Summer, 2016','Summer, 2016']],:selected => :semester_id))%>
  </div>
  <div class="form-group">
    <%= f.label :time, "Approximate length of project in weeks (A semester is 15 weeks)" %><br>
   <%= f.select(:time, options_for_select([['2 weeks','2 weeks'], ['3 weeks','3 weeks'],['4 weeks','4 weeks'], ['5 weeks','5 weeks'], ['6 weeks','6 weeks'], ['7 weeks','7 weeks'],['8 weeks','8 weeks'],['9 weeks','9 weeks'],['10 weeks','10 weeks'],['11 weeks','11 weeks'],['12 weeks','12 weeks'],['13 weeks','13 weeks'],['14 weeks','14 weeks'],['15 weeks','15 weeks']]))%>
  </div>

  <div class="form-group">
    <%= f.label :abstract, "Abstract (Describe the major tasks students will complete)" %><br>
    <%= f.text_area :abstract, :rows => 10, class: "form-control" %>
  </div>
 <% if current_user.admin? or current_user.role?('instructor') %>
    <%= f.label :relevance, "How is this client project relevant to the learning objectives of the course?" %><br>
    <%= f.text_area :relevance, :rows => 10, class: "form-control" %>
 <% end %>
  <% if current_user.admin? %>
<div class="form-group">
    <%= f.label :status, "Status" %><br>
    <%= f.select(:status, options_for_select([['Pending','Pending'], ['Approved',
      'Approved'],['Rejected','Rejected']],:selected => :status))%>

  </div>
  <% end %>

   
   

<div class="form-group">
    <%= f.submit class: "btn btn-default" %>
  </div>

<% end %>
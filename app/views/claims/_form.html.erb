
<%= form_for([@proposal, @claim]) do |f| %>
  <% if @claim.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@claim.errors.count, "error") %> prohibited this claim from being saved:</h2>

      <ul>
      <% @claim.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :claim_status, :value => "Claimed" %>

  <div class="form-group">
    <%= f.label :explanation, "Write a short message and explain why you're interested in the project" %><br>
    <%= f.text_area :explanation, class: "form-control" %>
  </div>
<% if current_user.admin? or current_user.role?("instructor") %>

  <div class="form-group">
      <%= f.label :course, "What course is this for?" %><br>
      <%= f.select :course, options_for_course, :prompt => 'Select One' %>
  </div>
<% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<div class="center">
  <h2>Who's Claimed Your Proposals?</h2>
</div>


<div class="table-responsive">
<table class="table table-bordered">
  <tr>
    <th class="center">Proposal Name</th>
    <th class="center">Email</th>
    <th class="center">Explanation</th>
    <th class="center">Date Completed</th>
  </tr>

  <% @claims.each do |claim| %>
    <tr>
      <td class="center"><%= claim.proposal.title %></td>
      <td class="center"><%= claim.claimer.email %></td>
      <td class="center"><%= claim.explanation %></td>
      <td class="center"><%= claim.created_at.strftime("%B %-d, %Y") %></td>
    </tr>
  <% end %>
</table>
</div>
<h2 class="proposal"><strong><%= current_user.email %>'s Proposals</strong> => A listing of proposals you created.</h2>
  <% if user_signed_in? %>
  <%= link_to 'Start a New Proposal!', new_proposal_path, class: "btn btn-default" %>
<% end %>
<br />
<div class ="table-responsive">
<table class ="table table-striped table-hover">
  <table class ="table table-striped">
  <thead>
    <tr>
      <th>Date Created</th>
       <th>Name</th>
      <th>Organization</th>
      <th>Title</th>
      <th>Category</th>
      <th>Semester</th>
      <th>Project Length</th>
      <th>Email</th>
      <th>Status</th>
    </tr>
  </thead>

  <tbody>
    <% @proposals.each do |proposal| %>
      <tr>
         <td class="date"><%= proposal.created_at %></td>
        <td><%= link_to [proposal.first_name, proposal.last_name].join(" "), proposal %></td>
        <td><%= proposal.organization %></td>
        <td><%= proposal.title %></td>
        <td><%= proposal.subject %></td>
        <td><%= proposal.semester_id %></td>
        <td><%= proposal.time %></td>
        <td><%= proposal.user.email if proposal.user %></td>
        <td><%= proposal.status if proposal.status %></td>
        <!--<td><%= link_to "PDF", proposal.document.url %></td>-->
        <td></td>
        <td><%= link_to 'Show', proposal %></td>
        <% if proposal.user == current_user %>
          <td><%= link_to 'Edit', edit_proposal_path(proposal) %></td>
          <td><%= link_to 'Destroy', proposal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
 
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>
</div>
<div class="center">
  <h2>The Proposals I've Claimed</h2>
</div>

<div class="table-responsive">
<table class="table table-bordered">
  <tr>
    <th class="center">Contact Info</th>
    <th class="center">Date Claimed</th>
    <th class="center">Note to Creator</th>
    <th class="center">Course</th>

  </tr>

  <% @claims.each do |claim| %>
    <tr>
      <td class="center"><%= claim.creator.email %></td>
      <td class="center"><%= claim.created_at.strftime("%B %-d, %Y") %></td>
      <td class="center"><%= claim.explanation %>
      <td class="center"><%= claim.course %>
    </tr>
  <% end %>
</table>
</div>
<br>
<% if user_signed_in? %>
  <%= link_to 'New Proposal', new_proposal_path, class: "btn btn-primary" %>
<% end %>
